@import 'nib'
@import 'webfonts/ss-standard.css'
@import 'webfonts/ss-social.css'

red=#900

chunk="chunk-1","chunk-2",serif
fancychunk()
  font-family chunk
  text-shadow 2px 2px 0px white, 6px 6px 0px #900
supershadow()
  text-shadow 1px 1px 0px white, 3px 3px 0px #ddd

#main a
  color #333

/*    Logo      */
#annual 
  color red
  font-size 3rem 

#header
  .top-bar
    background white
    border-bottom 1px solid #eee
    &, ul, a
      height 85px
    .name, .name a:hover
      background white
    a
      color black
      text-decoration none
      font-weight 300
      &:hover
        background #f6f6f6
    section
      a
        padding-top 20px
        font-size 1.5em
        font-family chunk
        supershadow()

#logo 
  font-size 4rem 
  line-height .9em
  position relative 
  top -30px
  transform rotate(-25deg) 
  margin .5em auto 
  width 200px
  supershadow()
  span
    display block 
  .word2
    position relative
    left -.8em 
  .word3
    color red
    font-size .55em
    position absolute 
    font-family chunk
    transform rotate(25deg)
    left 48px
    bottom -41px


/*  The List    */
// #list 

  
.beer
  position relative
  margin-bottom 2em
  .day
    font-family "corner-store-1","corner-store-2",sans-serif
    color red
    position relative
    top 8px
  a 
    text-decoration none
    display block
    h3 
      line-height 1.2em
      small
        display block
        line-height .9em
  .image
    margin 0 auto
    z-index -1
    border-radius 85px
    box-shadow 0 1px 5px rgba(20,20,20,.3)
    overflow hidden
    height 175px
    width 175px
    background-position -130px -230px
    background-size 250%
    img
      display none
  .details
    border-radius 6px
    border 1px solid #eee
    border-width 1px 4px
    margin 0
    text-align center
    width auto
    li
      list-style none
      display inline-block
      // width 20%
      padding 2px 4px
      margin 0
      font-size 11px
      font-family chunk
      border-left 1px solid #eee
      &:first-child
        border-left none
      &.cost
        &.low
          color lightgreen
        &.mid
          color green
        &.hi 
          color darkgreen
      &.abv
        &.mid
          color darkorange
        &.hi 
          color orange
