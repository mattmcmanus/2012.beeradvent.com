@import 'nib'
@import 'ss-social.css'

@font-face {
    font-family: 'homestead';
    src: url('/webfonts/homestead-regular-webfont.eot');
    src: url('/webfonts/homestead-regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('/webfonts/homestead-regular-webfont.woff') format('woff'),
         url('/webfonts/homestead-regular-webfont.ttf') format('truetype'),
         url('/webfonts/homestead-regular-webfont.svg#homestead_regularregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

red=#600

slab=homestead,serif
georgia="georgia, serif"
fancyslab()
  font-family slab
  text-shadow 2px 2px 0px white, 6px 6px 0px #900
supershadow()
  text-shadow 1px 1px 0px white, 3px 3px 0px #ddd

h2, h3
  font-family slab

#main a
  color #333

/*    Logo      */
#annual 
  color red
  font-size 3rem 

#header
  .top-bar
    background white
    border-bottom 1px solid #eee
    &, ul, a
      height 85px
    .name, .name a:hover
      background white
    a
      color black
      text-decoration none
      font-weight 300
      &:hover
        background #f6f6f6
    section
      a
        padding-top 23px
        font-size 1.4em
        font-family slab
        supershadow()

#logo 
  font-size 4rem 
  line-height .9em
  position relative 
  top -30px
  transform rotate(-25deg) 
  margin .5em auto 
  width 200px
  supershadow()
  span
    display block 
  .word2
    position relative
    left -.8em 
  .word3
    color red
    font-size .55em
    position absolute 
    font-family slab
    transform rotate(25deg)
    left 48px
    bottom -41px

.beer
  position relative
  margin-bottom 2em
  .day
    font-family georgia
    background-color red
    color white
    padding 8px
    font-size 1.2rem
    text-align center
    width 36px
    border-radius 2px
    strong
      font-family slab
      font-size 2rem
  a 
    text-decoration none
    display block
    h3, .image
      display inline-block
    h3 
      line-height 1.2em
      position absolute 
      top 75px 
      right 0
      width 65%
      small
        display block
        line-height 1em
        font-family georgia
        font-weight 300
        color red
    .image
      height 250px
      margin 0 10px
  .details
    border-radius 6px
    border 1px solid #eee
    border-width 1px 4px
    margin 0
    text-align center
    width auto
    li
      list-style none
      display inline-block
      // width 20%
      padding 2px 4px
      margin 0
      font-size 11px
      font-family slab
      border-left 1px solid #eee
      &:first-child
        border-left none
      &.cost
        &.low
          color lightgreen
        &.mid
          color green
        &.hi 
          color darkgreen
      &.abv
        &.mid
          color darkorange
        &.hi 
          color orange
