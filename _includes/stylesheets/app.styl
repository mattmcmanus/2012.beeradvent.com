@import 'nib'
@import 'webfonts/ss-standard.css'
@import 'webfonts/ss-social.css'

red=#900

chunk="chunk-1","chunk-2",serif

a 
  text-decoration underline  

/*    Logo      */
#annual 
  color red
  font-size 3rem 

#logo 
  font-size 4rem 
  line-height .9em
  position relative 
  top -30px
  transform rotate(-25deg) 
  margin .5em auto 
  width 200px
  span
    display block 
  .word2
    position relative
    left -.8em 
  .word3
    color red
    font-size .55em
    position absolute 
    font-family chunk
    transform rotate(25deg)
    left 48px
    bottom -41px


